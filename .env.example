# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================

# URL de conexión principal (PostgreSQL en producción, SQLite en desarrollo)
DATABASE_URL="postgresql://agenda_user:agenda_pass@localhost:5432/agenda_db"

# Para desarrollo local con SQLite (comentar la de arriba y descomentar esta)
# DATABASE_URL="file:./dev.db"

# ===========================================
# CONFIGURACIÓN DE AUTENTICACIÓN (NextAuth.js)
# ===========================================

# Secret para firmar JWTs (generar uno único para producción)
NEXTAUTH_SECRET="tu-secret-super-secreto-aqui-cambiar-en-produccion"

# URL base de la aplicación
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# CONFIGURACIÓN DE KEYCLOAK
# ===========================================

# Cliente de Keycloak para la aplicación
KEYCLOAK_CLIENT_ID="agenda-uc-client"
KEYCLOAK_CLIENT_SECRET="tu-client-secret-de-keycloak"

# URL del realm de Keycloak
KEYCLOAK_ISSUER="http://localhost:8080/realms/agenda-uc"

# ===========================================
# CONFIGURACIÓN DE LDAP/SAMBA
# ===========================================

# URL del servidor LDAP
LDAP_URL="ldap://localhost:389"

# Base DN para búsquedas
LDAP_BASE_DN="DC=reduc,DC=edu,DC=cu"

# Usuario para bind LDAP
LDAP_BIND_DN="CN=Administrator,CN=Users,DC=reduc,DC=edu,DC=cu"
LDAP_BIND_PASSWORD="Passw0rd!"

# ===========================================
# CONFIGURACIÓN DE APLICACIÓN
# ===========================================

# Entorno de ejecución
NODE_ENV="development"

# Puerto de la aplicación (si se ejecuta sin Docker)
PORT="3000"

# Nivel de logs
LOG_LEVEL="debug"

